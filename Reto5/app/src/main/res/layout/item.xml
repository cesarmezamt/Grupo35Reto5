<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_lista"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_colec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/chelsea_market"
            android:text="Colección" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagen1_colec"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        tools:srcCompat="@tools:sample/avatars"/>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/descripcion_colec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/chelsea_market"
                            android:text="Descripción:" />

                        <TextView
                            android:id="@+id/precio_colec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="$" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/favorito_colec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/chelsea_market"
                            android:text="Favorito"
                            android:textSize="10sp" />

                        <Button
                            android:id="@+id/btnseleccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/verde"
                            android:fontFamily="@font/chelsea_market"
                            android:text="Seleccionar"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </TableRow>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>